{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "bsl",
            "command": "oscript",
            "args": [
                "-check",
                "${file}"
            ],
            "problemMatcher": [
                "$OneScript Linter"
            ],
            "label": "oscript: OneScript: check"
        },
        {
            "type": "bsl",
            "command": "oscript",
            "args": [
                "-compile",
                "${file}"
            ],
            "problemMatcher": [
                "$OneScript Linter"
            ],
            "label": "oscript: OneScript: compile"
        },
        {
            "type": "bsl",
            "command": "oscript",
            "args": [
                "-make",
                "${file}",
                "${fileBasename}.exe"
            ],
            "problemMatcher": [
                "$OneScript Linter"
            ],
            "label": "oscript: OneScript: make"
        },
        {
            "type": "bsl",
            "command": "oscript",
            "args": [
                "${file}"
            ],
            "problemMatcher": [
                "$OneScript Linter"
            ],
            "group": "build",
            "label": "oscript: OneScript: run"
        },
        {
            "type": "bsl",
            "args": [
                "-c",
                "1bdd",
                "${workspaceRoot}/features",
                "-out",
                "${workspaceRoot}/exec.log"
            ],
            "problemMatcher": [
                "$OneScript Linter"
            ],
            "group": "build",
            "label": "sh: 1bdd: Exec all features"
        },
        {
            "type": "shell",
            "command": "gitsync",
            "args": [
                "sync",
                "-u",
                "Администратор",
                "-p",
                "Секрет",
                "/home/igor/Documents/_onec_dbs/barbershop-db/storage",
                "${workspaceRoot}/src"
            ],
            "group": "none",
            "label": "oscript gitsync: sync"
        }
    ]
}
